POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=gol_bazaar_production
DATABASE_URL=postgresql://gol_bazaar_app:CHANGE_THIS_TO_STRONG_PASSWORD@postgres:5432/gol_bazaar_production?sslmode=require

